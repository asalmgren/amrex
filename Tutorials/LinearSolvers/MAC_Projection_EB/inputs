amrex.fpe_trap_invalid = 1

n_cell = 128                             # num. of cells in y-direction; double this in x-dir, divide by 8 in z-dir
max_grid_size = 64                       # the maximum number of cells in any direction in a single grid (default: 32)

obstacles = 0 1 2 3 4 5 6 7 8            # this is how we choose which obstacles to include 

#The parameters below specify solver choices

use_hypre = 0                # if 1 then use hypre instead of geometric multigrid      (default: 0)

regtest    = 0               # If regtest == 1 then we don't plot zvel (used for regression testing with GPUs)

#phi_on_centroid = true
phi_on_centroid = false

mac_proj.verbose        = 4  # specify verbosity of geometric multigrid solver         (default: 0)
mac_proj.bottom_verbose = 2  # specify verbosity of the BiCGStab bottom solver if used (default: 0)
